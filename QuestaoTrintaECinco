import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner ref = new Scanner(System.in);

        System.out.println("Digite sua resposta (Sim ou Não): ");
        String resposta = ref.nextLine();

        String men = verificarResposta(resposta);
        System.out.println(men);
    }
  
    public static String verificarResposta(String resposta) {
        if (resposta.equalsIgnoreCase("sim")) {
            return "A resposta foi sim.";
        } else if (resposta.equalsIgnoreCase("não")) {
            return "A resposta foi não.";
        } else {
            return "Resposta inválida.";
        }
    }
}
